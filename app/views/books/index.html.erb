<div class="container">
  <div class="row">
    <!--左側-->
    <%= render 'books/left',book:@book,user_id:@user_id %>
    <!--左側ここまで-->
    <!--右側-->
    <div class="col-md-8">
      <h2>Books</h2>

      <% @books.each do |book| %>
      <table>
       <tr>
          <td><%= attachment_image_tag @user_id, :profile_image, size: "30x30", format:'jpeg', fallback:"no_image.jpg" %>
              <br><%= book.user.name %>
          </td>
          <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      </table>
      <% end %>
    </div>
    <!--右側ここまで-->
  </div>
</div>