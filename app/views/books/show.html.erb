<div class="container">
  <div class="row">
    <!--左側-->
    <%= render 'books/left',book:@book %>
    <!--左側ここまで-->
    <!--右側-->
    <div class="col-md-8">
      <h2>Book detail</h2>
      <table>
       <tr>
          <td>image<br><%= @book.user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy",book_path(@book),method: :delete %></td>
          <% end %>
        </tr>
      </table>
    </div>
    <!--右側ここまで-->
  </div>
</div>