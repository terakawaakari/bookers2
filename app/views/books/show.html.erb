<div class="container">
  <div class="row">
    <!--左側-->
    <%= render 'books/left',book:@book, user_id:@user_id %>
    <!--左側ここまで-->
    <!--右側-->
    <div class="col-md-8">
      <h2>Book detail</h2>
      <table>
       <tr>
          <td><%= attachment_image_tag @user_id, :profile_image, size: "30x30", format:'jpeg', fallback:"no_image.jpg" %><br><%= @book_find.user.name %></td>
          <td><%= @book_find.title %></td>
          <td><%= @book_find.body %></td>
          <% if @book_find.user == current_user %>
          <td><%= link_to "Edit",edit_book_path(@book_find.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy",book_path(@book_find), class:"btn btn-sm btn-danger",method: :delete %></td>
          <% end %>
        </tr>
      </table>
    </div>
    <!--右側ここまで-->
  </div>
</div>