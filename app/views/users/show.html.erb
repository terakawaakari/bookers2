<div class="container">
  <div class="row">
    <%= render "books/left", book:@book, user_id:@user_id %>
    <div class="col-md-8">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <tr>
          <td>
            <%=link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      </table>
      <% end %>
      <%= paginate @books %>
    </div>
  </div>
</div>