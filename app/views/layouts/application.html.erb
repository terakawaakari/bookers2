<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダー-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="nevbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to "Home",root_path,class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "Users",users_path,class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "Books",books_path,class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "logout",destroy_user_session_path, method: :delete,class:'nav-link text-light' %>
            </li>
          <% else %>
            <li class="nav-item">
            <%= link_to "Home",root_path,class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "About",homes_about_path,class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "Sign up",new_user_registration_path,class:'nav-link text-light' %>
           </li>
           <li class="nav-item">
           <%= link_to "log in",new_user_session_path,class:'nav-link text-light' %>
           </li>
          <% end %>
          </ul>
          <div>
        </div>
      </nav>
    </header>
    <!--ここまで-->
    
    
    <!--フッター-->
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

    <%= yield %>
  </body>
</html>
